@model RealEstateWebSiteProjects.Contract.CustomModels.Announcement.DocumentAnnouncementListModel
@{
    ViewData["Title"] = "AnnouncementList";
}
<link href="~/Template/fashi/css/toastr.min.css" rel="stylesheet" />
<section class="product-shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                <div class="filter-widget">
                    <h4 class="fw-title">Kategoriler</h4>
                    <ul class="filter-catagories">
                        @if (Model.AnnouncementCategoryList != null)
                        {
                            foreach (var item in Model.AnnouncementCategoryList)
                            {
                                <li><a href="#" class="GetCategory" data-id="@item.Id"><i class="fas fa-trash-alt"></i> @item.Description</a></li>

                            }
                        }
                    </ul>
                </div>
                <div class="filter-widget">
                    <h4 class="fw-title">İlan Tipi</h4>
                    <ul class="filter-catagories">
                        @if (Model.AnnouncementTypeList != null)
                        {
                            foreach (var item in Model.AnnouncementTypeList)
                            {
                                <li><a href="#" class="GetType" data-id="@item.Id"><i class="fas fa-trash-alt"></i> @item.Description</a></li>

                            }
                        }
                    </ul>
                </div>
                <div class="filter-widget">
                    <h4 class="fw-title">Sırala</h4>
                    <ul class="filter-catagories">
                        <li>
                            <select id="selectBox" onchange="changeFunc();">
                                <option value="">Seçiniz</option>
                                <option value="true">En Yeni</option>
                                <option value="false">En Eski</option>
                            </select>

                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div id="partialAnnouncementList" class="product-list">
                    @await Html.PartialAsync("~/Views/Announcement/_PartialGetAnnoucementList.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Template/fashi/js/jquery-3.3.1.min.js"></script>
<script src="~/Template/fashi/js/toastr.min.js"></script>


<script src="~/CustomScripts/Announcemet/GetCategoryAnnouncementScript.js"></script>
