@model RealEstateWebSiteProjects.Contract.CustomModels.Announcement.SingleAnnouncementModel
@{
    ViewData["Title"] = "DetailsAnnouncementById";
}

<!-- Product Shop Section Begin -->
<section class="product-shop spad page-details">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product-pic-zoom" style="width:500px; margin:auto">
                            <img class="product-big-img" src="img/product-single/product-1.jpg" alt="">
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div><br />
                        <div class="product-thumbs">
                            <div class="product-thumbs-track ps-slider owl-carousel">
                                @if (Model.FileDocumentList != null && Model.FileDocumentList.Count > 0)
                                {
                                    foreach (var item in Model.FileDocumentList)
                                    {
                                        <div class="pt active" data-imgbigurl="@item.FilePath">
                                            <img src="@item.FilePath" alt="">
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="product-details">
                            <div class="pd-title">
                                <span>@Model.AnnouncementCategory.Description</span>
                                <h3>@Model.Header - @Model.Number</h3>
                                <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                            </div>
                            <div class="pd-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <span>(5)</span>
                            </div>
                            <div class="pd-desc">
                                <p>
                                    @Model.Description
                                </p>
                                <h4>@Model.Price TL@*<span>629.99</span>*@</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="product-tab">
                    <div class="tab-item">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#tab-1" role="tab">Açıklama</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#tab-2" role="tab">Özellikler</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#tab-3" role="tab">İlan Sahibi</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-item-content">
                        <div class="tab-content">
                            <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                <div class="product-content">
                                    <div class="row">
                                        <div class="col-lg-7">
                                            <h5>Adres :</h5>
                                            <p>
                                                @Model.Address
                                            </p>
                                            <h5>İl</h5>
                                            <p>
                                                @Model.City.Description / @Model.County.Description
                                            </p>
                                        </div>
                                        <div class="col-lg-5">
                                            <img src="img/product-single/tab-desc.jpg" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab-2" role="tabpanel">
                                <div class="specification-table">
                                    <table>
                                        <tr>
                                            <td class="p-catagory">İlan Kategori</td>
                                            <td>
                                                <div class="pd-rating">
                                                    @Model.AnnouncementCategory.Description
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">İlan Tipi</td>
                                            <td>
                                                <div class="p-price">@Model.AnnouncementType.Description</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Net m²</td>
                                            <td>
                                                <div class="cart-add">@Model.NetSquareMeter</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Brüt m²</td>
                                            <td>
                                                <div class="p-stock">@Model.GrossSquareMeter</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Bulunduğu Kat</td>
                                            <td>
                                                <div class="p-weight">@Model.FloorLocation</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Oda Sayısı</td>
                                            <td>
                                                <div class="p-size">@Model.NumberOfRooms</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Banyo Sayısı</td>
                                            <td>
                                                @if (Model.NumberOfBathrooms != null)
                                                {
                                                    <div class="p-size">@Model.NumberOfBathrooms</div>

                                                }
                                                else
                                                {
                                                    <div class="p-size">-</div>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-catagory">Konut Yaşı</td>
                                            <td>
                                                @if (Model.HousingAge != null)
                                                {
                                                    <div class="p-code">@Model.HousingAge</div>
                                                }
                                                else
                                                {
                                                    <div class="p-code">-</div>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab-3" role="tabpanel">
                                <div class="product-content">
                                    <div class="row">
                                        <div class="col-lg-7">
                                            <h5>İlan Sahibi :</h5>
                                            <p>
                                                @Model.UserProfile.UserModel.FullName
                                            </p>
                                            <h5>Telefon Numarası</h5>
                                            <p>
                                                @Model.UserProfile.TelephoneNumber
                                            </p>
                                            <h5>E-posta</h5>
                                            <p>
                                                @Model.UserProfile.Email
                                            </p>
                                        </div>
                                        <div class="col-lg-5">
                                            <img src="img/product-single/tab-desc.jpg" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            }
            else
            {
                <h5>Kayıt Bulunamadı</h5>
            }
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
