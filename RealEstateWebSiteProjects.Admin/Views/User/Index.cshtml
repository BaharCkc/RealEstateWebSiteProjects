@model List<RealEstateWebSiteProjects.Contract.CustomModels.User.UserModel>
@{
    ViewData["Title"] = "Index";
}
<br />
<a href="/User/AddUser" type="button" style="float:right" class="btn btn-primary">
    Kullanıcı Ekle
</a>
<br />
<br />
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Adı Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.RegisterName</td>
                    <td style="text-align:center">
                        <a href="/User/UpdateUserById?Id=@item.Id" type="button" class="btn btn-sm btn-warning mr-2"> Güncelle </a>
                        <a href="#" class="deleteUser btn btn-sm btn-danger mr-2" type="button" data-id="@item.Id"> Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <h5>Kullanıcı Bulunamadı</h5>
        }
    </tbody>
</table>
@section Scripts
{
    <script src="~/CustomScripts/User/DeleteUserScript.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>
}

