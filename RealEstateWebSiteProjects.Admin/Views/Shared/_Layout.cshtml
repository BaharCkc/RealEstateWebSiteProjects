@{
    var Role = Context.Session.GetString("rolename");
    var FullName = Context.Session.GetString("username");
}
<body>
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="ht-left">
                    <div class="mail-service">
                        <i class=" fa fa-envelope"></i>
                        hello.colorlib@gmail.com
                    </div>
                    <div class="phone-service">
                        <i class=" fa fa-phone"></i>
                        +212 555 55 55
                    </div>
                </div>
                <div class="ht-right">
                    @if (Role != null)
                    {
                        <a href="/Login/Logout" class="login-panel"><i class="fa fa-user"></i>Çıkış Yap</a>
                        <a href="#" class="login-panel"><i class="fa fa-user"></i>@FullName</a>

                    }
                    else
                    {
                        <a href="/Login/Index" class="login-panel"><i class="fa fa-user"></i>Giriş</a>

                    }
                </div>
            </div>
        </div>
        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="logo" style="text-align:center">
                            <a href="/Home/Index">
                                <img src="~/UploadData/Screenshot_1.png" />
                                @*<img src="~/UploadData/emlak.jpg" style="width:800px; height:220px" />*@
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Role == "Admin")
        {
            <div class="nav-item">
                <div class="container">
                    <div class="nav-depart">
                        <div class="depart-btn">
                            <i class="ti-menu"></i>
                            <span>Kategoriler</span>
                            <ul class="depart-hover">
                                <li class="active"><a href="#">Daireler</a></li>
                                <li><a href="#">Arsalar</a></li>
                                <li><a href="#">Konutlar</a></li>
                            </ul>
                        </div>
                    </div>
                    <nav class="nav-menu mobile-menu">
                        <ul>
                            <li><a href="/Home/Index">Anasayfa</a></li>
                            <li><a href="/Announcement/AnnouncementList">İlanlar</a></li>
                            @*<li><a href="/User/UserProfileById">Hesabım</a></li>
                            <li><a href="/User/ChangePassword">Şifremi Değiştir</a></li>*@
